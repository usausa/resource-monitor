<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:s="http://smart/windows"
        xmlns:behaviors="clr-namespace:ResourceMonitor.Behaviors"
        xmlns:views="clr-namespace:ResourceMonitor.Views"
        mc:Ignorable="d"
        x:Class="ResourceMonitor.Views.MainWindow"
        s:DataContextResolver.Type="{x:Type views:MainWindowViewModel}"
        d:DataContext="{d:DesignInstance Type={x:Type views:MainWindowViewModel}}"
        Width="200"
        Height="900"
        Title="MainWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None">

    <i:Interaction.Behaviors>
        <behaviors:WindowPlacementBehavior Placement="TopRight" />
        <s:ContextMenuBehavior>
            <s:ContextMenuBehavior.Menu>
                <ContextMenu>
                    <MenuItem Command="{Binding HideCommand}"
                              Header="Hide" />
                </ContextMenu>
            </s:ContextMenuBehavior.Menu>
        </s:ContextMenuBehavior>
        <s:DragMoveBehavior />
    </i:Interaction.Behaviors>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <s:DataContextDisposeAction />
        </i:EventTrigger>
        <s:EventRequestTrigger Request="{Binding HideRequest}">
            <s:EventRequestTrigger.Actions>
                <s:CallMethodAction MethodName="Hide" />
            </s:EventRequestTrigger.Actions>
        </s:EventRequestTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:StatControl Grid.Row="0"
                           DataSet="{Binding CpuLoadTotalSet}"
                           GraphColor="#2196F3"
                           Label="CPU used" />

        <views:StatControl Grid.Row="1"
                           DataSet="{Binding GpuLoadCoreSet}"
                           GraphColor="#6993f0"
                           Label="GPU core" />

        <views:StatControl Grid.Row="2"
                           DataSet="{Binding GpuLoadMemorySet}"
                           GraphColor="#6993f0"
                           Label="GPU memory" />

        <views:StatControl Grid.Row="3"
                           DataSet="{Binding MemoryLoadPhysicalSet}"
                           GraphColor="#009688"
                           Label="Memory used" />

        <views:StatControl Grid.Row="4"
                           DataSet="{Binding GpuMemoryLoadSet}"
                           GraphColor="#00BCD4"
                           Label="GPU memory" />

        <views:StatControl Grid.Row="5"
                           DataSet="{Binding CpuTemperaturePackageSet}"
                           GraphColor="#F44336"
                           Label="CPU temp"
                           Unit="C" />

        <views:StatControl Grid.Row="6"
                           DataSet="{Binding GpuTemperatureCoreSet}"
                           GraphColor="#F44336"
                           Label="GPU temp"
                           Unit="C" />

        <views:StatControl Grid.Row="7"
                           DataSet="{Binding CpuPowerPackageSet}"
                           GraphColor="#FF9800"
                           Label="CPU power"
                           MaxValue="200"
                           Unit="W" />

        <views:StatControl Grid.Row="8"
                           DataSet="{Binding GpuPowerPackageSet}"
                           GraphColor="#FF9800"
                           Label="GPU power"
                           MaxValue="200"
                           Unit="W" />
    </Grid>

</Window>
